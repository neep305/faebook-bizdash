  script. 
    $(() => {
      jqueryDatepicker($);
      $('#date').datepicker({ dateFormat: 'yy-mm-dd' });
      $("#blockBtn").on('click', () => {
        $.blockUI();
        setTimeout(()=> {$.unblockUI();}, 2000);
      });
    });